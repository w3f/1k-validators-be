{
  "name": "1k-validators-be",
  "packageManager": "yarn@3.2.2",
  "yarnPath": ".yarn/releases/yarn-3.2.2.cjs",
  "private": true,
  "workspaces": [
    "packages/scorekeeper-status-ui",
    "packages/common",
    "packages/gateway",
    "packages/telemetry",
    "packages/core"
  ],
  "scripts": {
    "docs": "cd docs && npm install && npm run build",
    "scorekeeper-status-ui:build": "cd packages/scorekeeper-status-ui && npm build",
    "scorekeeper-status-ui:dev": "yarn workspace @1kv/scorekeeper-status-ui dev",
    "open:polkadot-apps": "open-cli https://polkadot.js.org/apps/?rpc=ws%3A%2F%2F127.0.0.1%3A9944#/staking",
    "open:mongo-express": "open-cli http://localhost:8888",
    "create-config-kusama-current": "yarn workspace @1kv/core run create-config-kusama-current",
    "create-config-polkadot-current": "yarn workspace @1kv/core run create-config-polkadot-current",
    "docker:kusama-current:start": "yarn run create-config-kusama-current && docker compose -f docker-compose.yml up -d --build && yarn run docker:logs",
    "docker:polkadot-current:start": "yarn run create-config-polkadot-current && docker compose -f docker-compose.yml up -d --build && yarn run docker:logs",
    "docker:logs": "docker compose logs -f",
    "docker:logs:core": "docker logs 1k-validators-be-1kv-core-1 -f",
    "docker:stop": "docker compose down",
    "lint": "yarn workspaces foreach run lint",
    "lint:fix": "yarn workspaces foreach run lint:fix",
    "clean": "yarn workspaces foreach run clean",
    "build": "yarn run docs && yarn workspaces foreach -t run build",
    "build:clean": "yarn workspaces foreach run clean:build",
    "start:dev:core": "yarn workspace @1kv/core run start:dev",
    "start:js:core": "NODE_OPTIONS='--max-old-space-size=10096' yarn workspace @1kv/core run js:start",
    "test:common:int": "yarn workspace @1kv/common run test:int",
    "test:common:unit": "yarn workspace @1kv/common run test:unit",
    "test:common:unit:ci": "circleci local execute CommonUnitTests",
    "test:common:int:scorekeeper:ci": "circleci local execute ScorekeeperIntegrationTests",
    "test:common:int:chaindata:ci": "circleci local execute ChaindataIntegrationTests",
    "test:common:int:apihandler:ci": "circleci local execute ApiHandlerIntegrationTests",
    "test:common:int:nominator:ci": "circleci local execute NominatorIntegrationTests",
    "test:common:int:ci": "yarn test:common:int:scorekeeper:ci && yarn test:common:int:chaindata:ci && yarn test:common:int:apihandler:ci && yarn test:common:int:nominator:ci",
    "test:telemetry:int:ci": "circleci local execute TelemetryIntegrationTests",
    "test:ci:all": "yarn test:common:int:ci && yarn test:telemetry:int:ci",
    "test:all": "yarn workspaces foreach run test",
    "test": "LOG_LEVEL=warn yarn build && vitest run --coverage --config vitest.config.mts",
    "test:ui": "LOG_LEVEL=warn vitest --ui --config vitest.config.mts --coverage",
    "turbo": "turbo build"
  },
  "devDependencies": {
    "@types/cron": "^2.4.0",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.14.10",
    "@types/semver": "^7.5.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "concurrently": "^8.2.2",
    "eslint": "8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "nodemon": "^3.1.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "turbo": "v2.0.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-node": "^3.1.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@1kv/common": "workspace:*",
    "@1kv/gateway": "workspace:*",
    "@1kv/telemetry": "workspace:*",
    "@koa/router": "^12.0.1",
    "@octokit/rest": "^20.0.2",
    "@polkadot/api": "^11.2.1",
    "@polkadot/keyring": "^12.6.2",
    "axios": "^1.6.7",
    "chalk": "5.3.0",
    "coingecko-api-v3": "^0.0.29",
    "commander": "^12.0.0",
    "cron": "^3.1.6",
    "date-fns": "^3.6.0",
    "eventemitter3": "^5.0.1",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-cash": "^4.1.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.8.7",
    "koa2-cors": "^2.0.6",
    "lru-cache": "^10.2.0",
    "matrix-js-sdk": "^31.1.0",
    "mongodb": "6.5.0",
    "mongodb-memory-server": "^9.1.7",
    "mongoose": "^8.2.1",
    "prettier": "^3.2.4",
    "prom-client": "^15.1.2",
    "semver": "^7.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger2": "^4.0.3",
    "swagger2-koa": "^4.0.0",
    "winston": "^3.12.0",
    "ws": "^8.16.0",
    "yamljs": "^0.3.0"
  }
}
